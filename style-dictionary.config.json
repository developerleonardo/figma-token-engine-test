{
  "source": ["design-tokens/**/*.json"],
  "platforms": {
    "css": {
      "buildPath": "src/styles/tokens/",
      "transforms": ["attribute/cti", "name/kebab", "color/hsl", "size/px"],
      "files": [
        {
          "destination": "variables.css",
          "format": "css/variables",
          "options": {
            "outputReferences": true
          }
        }
      ]
    }
  }
}

